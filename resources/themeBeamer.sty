\setbeamercovered{transparent=5}
\setbeamerfont{date}{size=\scriptsize}
\setbeamerfont{author}{size=\large}
\setbeamerfont{institute}{size=\scriptsize}
\setbeamerfont{block title}{size=\normalsize}
